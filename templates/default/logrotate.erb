<%= node['varnish']['log_file'] %> {
    daily
    rotate 7
    missingok
    notifempty
    compress
    delaycompress
    postrotate
        /bin/kill -HUP `cat <%= node['varnish']['log_pid_file'] %> 2>/dev/null` 2> /dev/null || true
    endscript
}
